<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".eco.EcoPlaceFragment"
    android:background="@color/redblack">
    <Spinner
        android:id="@+id/areaState"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/patten01"
        android:backgroundTint="@color/white"
        android:drawSelectorOnTop="true"
        android:entries="@array/state"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:tooltipText="도" />
    <Spinner
        android:id="@+id/areaCity"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/areaState"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:textAlignment="center"
        android:entries="@array/city_gb"
        android:drawSelectorOnTop="true"
        android:background="@drawable/patten01"
        android:backgroundTint="@color/white"
        android:tooltipText="시"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/searchBtn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/areaCity"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/patten03"
        android:backgroundTint="@color/MainColorB"
        android:text="검색"
        android:textColor="@color/white" />


    <ImageView
        android:id="@+id/outimage"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/areaCity"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/areaURL"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/outimage"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="링크링크링크링크링크링크링크링크"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/areaURL"
        android:layout_marginTop="10dp"
        android:background="@drawable/patten01"
        android:backgroundTint="@color/MainColorY"
        android:text="지도에서 확인하기"
        android:textColor="@color/white" />
    <!-- 비져빌리티 추가됨-->

</RelativeLayout>